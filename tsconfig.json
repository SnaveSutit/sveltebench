{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"types": ["node", "svelte", "blockbench-types"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,

		"declaration": true,
		"declarationDir": "./types",
		"emitDeclarationOnly": true
	}
}
